package useOfForLoop;

public class UseOfForLoop {

	public static void main(String[] args) {
		/*
		 Loop contain: 
		 initialization block; 
		 Conditional block; 
		 Incremental or decremental block

		*/
        //1st way
		for(int i=1; i<=10; i++ ) {
			System.out.println(i);
		}
		//2nd way
				for(int i=1; i<=10; i=i+3 ) {
					System.out.println(i);
				}
	}

}
