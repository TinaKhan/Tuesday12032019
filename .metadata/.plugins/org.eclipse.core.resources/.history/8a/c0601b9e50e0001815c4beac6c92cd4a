import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class webelementverification {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.setProperty("webdriver.chromedriver.driver","C:\\chromedriver");
		WebDriver driver=new ChromeDriver();
		driver.get("http://www.makemytrip.com/");
System.out.println("Before clicking the Multicity Button");
System.out.println(driver.findElement(By.xpath("//*[@id=\"hp-widget__return\"]")).isDisplayed());
System.out.println("After clicking the Multicity Button");
driver.findElement(By.xpath("//*[@id=\"multicity\"]/label")).click();
System.out.println(driver.findElement(By.xpath("//*[@id=\"hp-widget__return\"]")).isDisplayed());

	}

}
