package useOfLoop;

public class UseOfBreak {

	public static void main(String[] args) {
		for (int i = 1; i <= 5; i++) {
			System.out.println("The values are: "+i);
		}
		System.out.println("******After the break values are******");
		for (int j = 1; j <= 5; j++) {
			if  (j == 3) {
			    break;
				  }
				System.out.println("The values are: "+j);
			}

	}

}
